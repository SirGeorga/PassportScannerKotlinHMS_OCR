<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_background"
    android:padding="24dp">

    <!-- FrameLayout для содержания PreviewView и ImageView -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- PreviewView for camera preview -->
        <androidx.camera.view.PreviewView
            android:id="@+id/viewFinder"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Overlay guide for ID card -->

        <View
            android:id="@+id/guideOverlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/guide_overlay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1.59:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/guidePhoto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/guide_overlay"
            app:layout_constraintStart_toStartOf="@id/guideOverlay"
            app:layout_constraintTop_toTopOf="@id/guideOverlay"
            app:layout_constraintBottom_toBottomOf="@id/guideOverlay"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_percent="0.5" />

        <!-- Привязка для фамилии -->
        <View
            android:id="@+id/guideFamilyName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/guide_overlay"
            app:layout_constraintStart_toEndOf="@id/guidePhoto"
            app:layout_constraintTop_toTopOf="@id/guideOverlay"
            app:layout_constraintEnd_toEndOf="@id/guideOverlay"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.1" />

        <!-- Привязка для имени -->
        <View
            android:id="@+id/guideName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/guide_overlay"
            app:layout_constraintStart_toStartOf="@id/guideFamilyName"
            app:layout_constraintTop_toBottomOf="@id/guideFamilyName"
            app:layout_constraintEnd_toEndOf="@id/guideFamilyName"
            app:layout_constraintWidth_percent="1.0"
            app:layout_constraintHeight_percent="0.1" />

        <!-- Привязка для отчества -->
        <View
            android:id="@+id/guideSurname"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/guide_overlay"
            app:layout_constraintStart_toStartOf="@id/guideName"
            app:layout_constraintTop_toBottomOf="@id/guideName"
            app:layout_constraintEnd_toEndOf="@id/guideName"
            app:layout_constraintWidth_percent="1.0"
            app:layout_constraintHeight_percent="0.1" />

        <!-- ImageView for displaying captured image -->
        <ImageView
            android:id="@+id/imageViewId"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:background="@drawable/imageview_background"
            android:contentDescription="Image for scanning"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ScrollView для текста -->
    <ScrollView
        android:id="@+id/scrollViewResultText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/scrollview_background"
        android:padding="8dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toTopOf="@id/scrollViewResultParced"
        app:layout_constraintTop_toBottomOf="@id/imageContainer">

        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Здесь будет отображаться полный результат распознавания"
            android:textAlignment="center"
            android:textColor="@android:color/black" />
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollViewResultParced"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/scrollview_background"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintTop_toBottomOf="@id/scrollViewResultText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/resultFamilyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Фамилия"
                    android:textAlignment="center"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:id="@+id/imageDbgFamilyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/resultFamilyName"
                    app:srcCompat="@drawable/imageview_background" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/resultName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Имя"
                    android:textAlignment="center"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:id="@+id/imageDbgName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/resultName"
                    app:srcCompat="@drawable/imageview_background" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/resultSurname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Отчество"
                    android:textAlignment="center"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:id="@+id/imageDbgSurname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/resultSurname"
                    app:srcCompat="@drawable/imageview_background" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <!-- LinearLayout для кнопок -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/readTextButtonId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:minWidth="90dp"
            android:text="Загрузить"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:backgroundTint="@color/cardview_dark_background"
            app:cornerRadius="28dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/captureImageButtonId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:minWidth="90dp"
            android:text="Сфотографировать"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:backgroundTint="@color/cardview_dark_background"
            app:cornerRadius="28dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/shareButtonId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="90dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Поделиться"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:backgroundTint="@color/cardview_dark_background"
            app:cornerRadius="28dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>