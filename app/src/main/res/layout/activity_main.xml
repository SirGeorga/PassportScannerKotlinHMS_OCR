<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <!-- FrameLayout для содержания PreviewView и ImageView -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- PreviewView for camera preview -->
        <androidx.camera.view.PreviewView
            android:id="@+id/viewFinder"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Overlay guide for ID card -->

        <ImageView
            android:id="@+id/imageViewId"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:contentDescription="Image for scanning"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1.59:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutGuideFaceContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvPhotoHint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Сфотографируйте лицевую сторону ID-карты"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/guideOverlay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/guide_overlay"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1.59:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/layoutPhoto"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/guideOverlay"
                app:layout_constraintEnd_toStartOf="@id/layoutGuideInfo"
                app:layout_constraintStart_toStartOf="@id/guideOverlay"
                app:layout_constraintTop_toTopOf="@id/guideOverlay"
                app:layout_constraintWidth_percent="0.31">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2" />

                <View
                    android:id="@+id/guidePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="7dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/guide_overlay" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.09" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutGuideInfo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="40dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/guideOverlay"
                app:layout_constraintEnd_toEndOf="@id/guideOverlay"
                app:layout_constraintStart_toEndOf="@id/layoutPhoto"
                app:layout_constraintTop_toTopOf="@id/guideOverlay">


                <View
                    android:id="@+id/blanlk1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.16" />

                <View
                    android:id="@+id/guideFamilyName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.04"
                    android:background="@drawable/guide_overlay" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.025" />

                <View
                    android:id="@+id/guideName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.04"
                    android:background="@drawable/guide_overlay" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.025" />

                <View
                    android:id="@+id/guideSurname"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.04"
                    android:background="@drawable/guide_overlay" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.025" />

                <View
                    android:id="@+id/guideBirthDate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginEnd="100dp"
                    android:layout_weight="0.04"
                    android:background="@drawable/guide_overlay" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.08" />


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutGuideBackContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Сфотографируйте оборотную сторону ID-карты"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/guideBackOverlay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/guide_overlay"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1.59:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/layoutBackLeftBlank"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/guideBackOverlay"
                app:layout_constraintEnd_toStartOf="@id/layoutBackInfo"
                app:layout_constraintStart_toStartOf="@id/guideBackOverlay"
                app:layout_constraintTop_toTopOf="@id/guideBackOverlay"
                app:layout_constraintWidth_percent="0.24">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBackInfo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/guideBackOverlay"
                app:layout_constraintEnd_toEndOf="@id/guideBackOverlay"
                app:layout_constraintStart_toEndOf="@id/layoutBackLeftBlank"
                app:layout_constraintTop_toTopOf="@id/guideBackOverlay">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.06"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/blanlkBackTop"
                        android:layout_width="100dp"
                        android:layout_height="match_parent" />

                    <View
                        android:id="@+id/guideIDNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/guide_overlay" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.02" />

                <View
                    android:id="@+id/guideBirthPlace"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.03"
                    android:background="@drawable/guide_overlay" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.055" />

                <View
                    android:id="@+id/guideIssued"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.031"
                    android:background="@drawable/guide_overlay" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.015" />

                <View
                    android:id="@+id/guideDocDate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.033"
                    android:layout_marginEnd="200dp"
                    android:background="@drawable/guide_overlay" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.185" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/photosThumbnails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/scrollViewResultParced"
        app:layout_constraintEnd_toEndOf="@+id/scrollViewResultParced"
        app:layout_constraintStart_toStartOf="@id/scrollViewResultParced"
        app:layout_constraintTop_toBottomOf="@id/imageContainer">

        <ImageButton
            android:id="@+id/photoFaceFingernail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:scaleType="fitCenter"
            android:background="@drawable/ic_add"/>

        <ImageButton
            android:id="@+id/photoBackFingernail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:scaleType="fitCenter"
            android:background="@drawable/ic_add"/>

    </LinearLayout>

    <!-- ScrollView для текста -->

    <ScrollView
        android:id="@+id/scrollViewResultParced"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/scrollview_background"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintTop_toBottomOf="@id/photosThumbnails"
        tools:layout_editor_absoluteX="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textSize="10sp"
                    android:hint="ID мероприятия" />

                <EditText
                    android:id="@+id/etEventID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="Введите" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">
            <RadioGroup
                android:id="@+id/rgSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginEnd="10dp"
                    android:text="Пол:"/>
                <RadioButton
                    android:id="@+id/rbSexMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="Мужcкой"/>
                <RadioButton
                    android:id="@+id/rbSexFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="Женский"/>
            </RadioGroup>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">
                <RadioGroup
                    android:id="@+id/rgGrade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginEnd="10dp"
                        android:text="Класс:"/>
                    <RadioButton
                        android:id="@+id/rb8thGrade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="8"/>
                    <RadioButton
                        android:id="@+id/rb9thGrade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="9"/>
                    <RadioButton
                        android:id="@+id/rb10thGrade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="10"/>
                    <RadioButton
                        android:id="@+id/rb11thGrade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="11"/>
                </RadioGroup>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <EditText
                    android:id="@+id/resultFamilyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Фамилия" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <EditText
                    android:id="@+id/resultName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Имя" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <EditText
                    android:id="@+id/resultSurname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Отчество" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <EditText
                    android:id="@+id/resultBirthDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Дата рождения" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <EditText
                    android:id="@+id/resultIDNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Номер документа" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <EditText
                    android:id="@+id/resultBirthPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Место рождения" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <EditText
                    android:id="@+id/resultIssued"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Орган выдачи" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <EditText
                    android:id="@+id/resultDocDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Дата выдачи" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/divider">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/readTextButtonId"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:minWidth="90dp"
            android:text="Загрузить"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:backgroundTint="@color/cardview_dark_background"
            app:cornerRadius="28dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/captureImageButtonId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:minWidth="90dp"
            android:text="Сфотографировать"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:backgroundTint="@color/cardview_dark_background"
            app:cornerRadius="28dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/shareButtonId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="90dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Отправить в CRM"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:backgroundTint="@color/cardview_dark_background"
            app:cornerRadius="28dp" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>